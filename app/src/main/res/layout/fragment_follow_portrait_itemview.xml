<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemGroup.Item_follow_fragment_21">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout5" />

    <SeekBar
        android:id="@+id/alpha_control"
        style="@android:style/Widget.DeviceDefault.Light.SeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints" />

    <WebView
        android:id="@+id/web_movie"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:alpha="1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoView" />

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.leebeomwoo.viewbody_final.CameraUse.AutoFitTextureView
            android:id="@+id/AutoView"
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="359dp" />

        <Button
            android:id="@+id/play_record"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/viewChange_Btn"
            android:layout_below="@+id/viewChange_Btn" />

        <Button
            android:id="@+id/record_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/play_Btn"
            android:layout_alignStart="@+id/viewChange_Btn"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/record" />

        <Button
            android:id="@+id/load_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/viewChange_Btn"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/plus"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/play_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/load_Btn"
            android:layout_alignStart="@+id/load_Btn"
            android:background="@drawable/playbutton" />

        <Button
            android:id="@+id/viewChange_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/AutoView"
            android:background="@drawable/switch_camera" />
    </RelativeLayout>


