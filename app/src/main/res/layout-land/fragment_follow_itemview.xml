<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_weight="1.2"
        android:padding="5dp">

        <Button
            android:id="@+id/record_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/play_Btn"
            android:layout_below="@+id/play_Btn"
            android:layout_marginTop="17dp"
            android:background="@drawable/record" />

        <Button
            android:id="@+id/load_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/viewChange_Btn"
            android:layout_below="@+id/viewChange_Btn"
            android:layout_marginTop="15dp"
            android:background="@drawable/plus" />

        <Button
            android:id="@+id/play_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/playbutton"
            android:layout_below="@+id/play_record"
            android:layout_alignStart="@+id/play_record" />

        <Button
            android:id="@+id/viewChange_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:background="@drawable/switch_camera" />

        <Button
            android:id="@+id/play_record"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/load_Btn" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp">

        <com.example.leebeomwoo.viewbody_final.CameraUse.AutoFitTextureView
            android:id="@+id/AutoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

        <!-- <com.tutsplus.facedetection.FaceOverlayView
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/face_overlay"
             android:layout_width="match_parent"
             android:layout_height="match_parent" /> -->

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp">

        <WebView
            android:id="@+id/web_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <SeekBar
        android:id="@+id/alpha_control"
        style="@android:style/Widget.DeviceDefault.Light.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:progress="50" />

</RelativeLayout>