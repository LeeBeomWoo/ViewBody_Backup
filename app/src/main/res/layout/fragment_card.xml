<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/faceimage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/category_txtB"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/nickname_txtB"
        android:layout_toEndOf="@+id/nick_lbl"
        android:ems="10"
        android:padding="5dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/nickname_txtB"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nick_lbl"
        android:ems="10"
        android:padding="5dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/nick_lbl"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nickname_txtB"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/faceimage"
        android:padding="7dp"
        android:text="@string/nickname"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/category_lbl"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/category_txtB"
        android:layout_below="@+id/nick_lbl"
        android:layout_toEndOf="@+id/faceimage"
        android:padding="7dp"
        android:text="@string/expertpart"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textSize="11sp"
        tools:ignore="SmallSp" />
</RelativeLayout>
