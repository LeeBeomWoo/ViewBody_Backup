<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@drawable/backline"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/qna_menuBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/writer_menuBtn"
            android:layout_below="@+id/writer_menuBtn"
            android:layout_margin="3dp"
            android:background="@color/nocolor"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/qna_main" />

        <ImageButton
            android:id="@+id/account_menuBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/qna_menuBtn"
            android:layout_margin="3dp"
            android:background="@color/nocolor"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/arrows2" />

        <ImageButton
            android:id="@+id/home_menuBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@color/nocolor"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/arrows2"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/cancel_menuBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:background="@color/nocolor"
            android:scaleType="fitCenter"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/close"
            tools:ignore="ContentDescription"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/apptest"
        android:textSize="10sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/menu_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toEndOf="@+id/body_menuBtn"
                tools:listitem="@layout/menulist"/>

            <ImageButton
                android:id="@+id/body_menuBtn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/nocolor"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/body_with_text" />

            <ImageButton
                android:id="@+id/writer_menuBtn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/food_menuBtn"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/nocolor"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/arrows2" />

            <ImageButton
                android:id="@+id/food_menuBtn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/writer_menuBtn"
                android:layout_below="@+id/follow_menuBtn"
                android:background="@color/nocolor"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/food_with_text" />

            <ImageButton
                android:id="@+id/follow_menuBtn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/food_menuBtn"
                android:layout_below="@+id/body_menuBtn"
                android:background="@color/nocolor"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/follow_with_text" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>