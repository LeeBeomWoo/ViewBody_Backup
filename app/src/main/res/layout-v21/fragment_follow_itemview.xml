<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemGroup.Item_follow_fragment_21">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="7.65">

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true">

            <com.example.leebeomwoo.viewbody_final.CameraUse.AutoFitTextureView
                android:id="@+id/AutoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <Button
            android:id="@+id/play_record"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/record_Btn"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/record_Btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/load_Btn"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/record" />

        <Button
            android:id="@+id/load_Btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/viewChange_Btn"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/plus"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/play_Btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/play_record"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/playbutton" />

        <Button
            android:id="@+id/viewChange_Btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/switch_camera" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_weight="2">

        <WebView
            android:id="@+id/web_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:alpha="1" />

    </RelativeLayout>

    <SeekBar
        android:id="@+id/alpha_control"
        style="@android:style/Widget.DeviceDefault.Light.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <!-- <com.tutsplus.facedetection.FaceOverlayView
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/face_overlay"
       android:layout_width="match_parent"
       android:layout_height="match_parent" /> -->

</LinearLayout>