<?xml version="1.0" encoding="utf-8"?>
<cn.gavinliu.android.lib.scale.ScaleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leebeomwoo.viewbody_final.MainActivity">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewPager"
        android:layout_width="395dp"
        android:layout_height="643dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_editor_absoluteX="0dp"/>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_editor_absoluteY="25dp"
        app:layout_editor_absoluteX="8dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:logo="@drawable/logomain"
            app:layout_scrollFlags="scroll|enterAlways|snap">
            <cn.gavinliu.android.lib.scale.ScaleLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/nocolor"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:srcCompat="@drawable/logo"
                    tools:ignore="ContentDescription"
                    tools:layout_editor_absoluteY="5dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/divider" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:srcCompat="@drawable/toolbartext" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/divider" />

            </cn.gavinliu.android.lib.scale.ScaleLinearLayout>

        </android.support.v7.widget.Toolbar>

        <cn.gavinliu.android.lib.scale.ScaleRelativeLayout
            android:id="@+id/maintablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/tabbackBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/tabback" />

            <com.example.leebeomwoo.viewbody_final.Support.CenteringTabLayout
                android:id="@+id/main_TabLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_toEndOf="@+id/tabbackBtn"
                android:layout_toStartOf="@+id/tabmenuBtn"
                android:padding="5dp"
                android:textAlignment="center"
                app:tabGravity="center"
                app:tabMaxWidth="0dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/cardview_light_background"
                app:tabTextAppearance="@style/maintabtextsize"
                app:tabTextColor="@color/nocolor" />

            <Button
                android:id="@+id/tabmenuBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:background="@drawable/tabmenu" />

        </cn.gavinliu.android.lib.scale.ScaleRelativeLayout>


    </android.support.design.widget.AppBarLayout>
</android.support.constraint.ConstraintLayout>
</cn.gavinliu.android.lib.scale.ScaleLinearLayout>
