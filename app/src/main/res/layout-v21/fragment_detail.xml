<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <cn.gavinliu.android.lib.scale.ScaleLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backline"
        android:orientation="vertical">

        <cn.gavinliu.android.lib.scale.ScaleLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemtitle_image"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@color/body_toolbar" />

            <TextView
                android:id="@+id/detile_Title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/fablabel_bacground"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                android:textStyle="bold" />
        </cn.gavinliu.android.lib.scale.ScaleLinearLayout>

        <com.example.leebeomwoo.viewbody_final.Support.HelpWebView
            android:id="@+id/detile_Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/video_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:paddingStart="5dp"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:visibility="gone" />

        <WebView
            android:id="@+id/video_view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/video_title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:paddingStart="5dp"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:visibility="gone" />

        <WebView
            android:id="@+id/video_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/video_title_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:paddingStart="5dp"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:visibility="gone" />

        <WebView
            android:id="@+id/video_view_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background">

            <WebView
                android:id="@+id/detile_face"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                tools:ignore="WebViewLayout" />

            <TextView
                android:id="@+id/detile_Id"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/like_btn"
                android:layout_toRightOf="@+id/detile_face"
                android:background="@color/cardview_light_background"
                android:padding="5dp"
                android:textAlignment="center"
                tools:ignore="RtlHardcoded" />

            <Button
                android:id="@+id/like_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="@string/like"
                android:textAlignment="center"
                android:textSize="18sp" />

        </RelativeLayout>

    </cn.gavinliu.android.lib.scale.ScaleLinearLayout>

</android.support.v7.widget.CardView>
