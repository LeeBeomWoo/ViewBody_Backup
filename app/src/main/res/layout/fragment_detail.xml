<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/backline"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backline"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemtitle_image"
                srcCompat="@drawable/logomain"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/body_toolbar"
                app:srcCompat="@drawable/logomain" />

            <TextView
                android:id="@+id/detile_Title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/fablabel_bacground"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <WebView
            android:id="@+id/detile_Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/video_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:paddingStart="5dp"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:visibility="gone" />

        <WebView
            android:id="@+id/video_view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/video_title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:paddingStart="5dp"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:visibility="gone" />

        <WebView
            android:id="@+id/video_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/video_title_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:paddingStart="5dp"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:visibility="gone" />

        <WebView
            android:id="@+id/video_view_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background">

            <WebView
                android:id="@+id/detile_face"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                tools:ignore="WebViewLayout" />

            <TextView
                android:id="@+id/detile_Id"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/detile_face"
                android:background="@color/cardview_light_background"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:ignore="RtlHardcoded" />

            <Button
                android:id="@+id/like_btn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/detile_Id"
                android:layout_toEndOf="@+id/detile_face"
                android:text="@string/like"
                android:textAlignment="center"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
