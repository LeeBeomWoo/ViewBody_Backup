<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leebeomwoo.viewbody_final.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:logo="@drawable/logomain"
            android:weightSum="1"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/divider"
                android:dividerPadding="0dp"
                android:orientation="horizontal"
                android:showDividers="middle|end">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/nocolor"
                    android:scaleType="fitCenter"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:srcCompat="@drawable/logo"
                    tools:ignore="ContentDescription"
                    tools:layout_editor_absoluteY="5dp" />

                <ImageView
                    android:id="@+id/toolbartextimage"
                    android:layout_width="135dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@color/nocolor"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintLeft_toRightOf="@+id/imageView2"
                    app:srcCompat="@drawable/toolbartext"
                    tools:ignore="ContentDescription"
                    tools:layout_editor_absoluteY="0dp" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/maintablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/tabbackBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/tabback" />

            <com.example.leebeomwoo.viewbody_final.Support.CenteringTabLayout
                android:id="@+id/main_TabLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_toEndOf="@+id/tabbackBtn"
                android:layout_toStartOf="@+id/tabmenuBtn"
                android:padding="5dp"
                android:textAlignment="center"
                app:tabGravity="center"
                app:tabMaxWidth="0dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/cardview_light_background"
                app:tabTextAppearance="@style/maintabtextsize"
                app:tabTextColor="@color/nocolor" />

            <Button
                android:id="@+id/tabmenuBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:background="@drawable/tabmenu" />

        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
