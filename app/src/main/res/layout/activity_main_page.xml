<?xml version="1.0" encoding="utf-8"?>
<cn.gavinliu.android.lib.scale.ScaleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leebeomwoo.viewbody_final.MainActivity">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewPager"
        android:layout_width="0dp"
        android:layout_height="643dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_editor_absoluteY="25dp"
        app:layout_editor_absoluteX="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:logo="@drawable/logomain"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            android:weightSum="1">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.34">

                <ImageView
                    android:id="@+id/logoimageBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/nocolor"
                    android:scaleType="fitCenter"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:srcCompat="@drawable/logo"
                    tools:ignore="ContentDescription"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/divider"
                    tools:ignore="ContentDescription"
                    app:layout_constraintLeft_toRightOf="@+id/logoimageBtn"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="0dp"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/toolbartext"
                    tools:ignore="ContentDescription"
                    app:layout_constraintLeft_toRightOf="@+id/imageView3"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintRight_toLeftOf="@+id/imageView4"
                    android:layout_marginRight="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="0dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/divider"
                    tools:ignore="ContentDescription"
                    android:layout_marginRight="0dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="0dp" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>

        <cn.gavinliu.android.lib.scale.ScaleRelativeLayout
            android:id="@+id/maintablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/tabbackBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/tabback" />

            <com.example.leebeomwoo.viewbody_final.Support.CenteringTabLayout
                android:id="@+id/main_TabLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_toEndOf="@+id/tabbackBtn"
                android:layout_toStartOf="@+id/tabmenuBtn"
                android:padding="5dp"
                android:textAlignment="center"
                app:tabGravity="center"
                app:tabMaxWidth="0dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/cardview_light_background"
                app:tabTextAppearance="@style/maintabtextsize"
                app:tabTextColor="@color/nocolor" />

            <Button
                android:id="@+id/tabmenuBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:background="@drawable/tabmenu" />

        </cn.gavinliu.android.lib.scale.ScaleRelativeLayout>


    </android.support.design.widget.AppBarLayout>
</android.support.constraint.ConstraintLayout>
</cn.gavinliu.android.lib.scale.ScaleLinearLayout>
