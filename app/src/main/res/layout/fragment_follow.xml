<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/followCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/follow_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <WebView
            android:id="@+id/list_movie"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            tools:ignore="WebViewLayout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/follow_Id"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/follow_Id_lbl" />

            <Button
                android:id="@+id/follow_Btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/follow_media"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/follow_Id_lbl"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingStart="3dp"
                android:text="@string/nickname"
                android:textAlignment="center"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/follow_Like"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/follow_Btn"
                android:text="@string/like" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>