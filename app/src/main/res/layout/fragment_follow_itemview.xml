<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ItemGroup.Item_follow_fragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="195dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/play_record"
            android:layout_toStartOf="@+id/play_record">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="visible" />
        </FrameLayout>

        <Button
            android:id="@+id/play_record"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:layout_toEndOf="@+id/viewChange_Btn" />

        <Button
            android:id="@+id/record_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="3dp"
            android:background="@drawable/record" />

        <Button
            android:id="@+id/load_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:layout_toStartOf="@+id/play_Btn"
            android:background="@drawable/plus"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/play_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:background="@drawable/playbutton" />

        <Button
            android:id="@+id/viewChange_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:background="@drawable/switch_camera" />
    </RelativeLayout>

    <com.example.leebeomwoo.viewbody_final.CameraUse.AutoFitTextureView
        android:id="@+id/AutoView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_toStartOf="@+id/play_record"
        android:visibility="visible" />

    <WebView
        android:id="@+id/web_movie"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:alpha="1" />

    <SeekBar
        android:id="@+id/alpha_control"
        style="@android:style/Widget.DeviceDefault.Light.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>